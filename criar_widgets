import tkinter as tk
from tkinter import ttk, messagebox
import re
import csv

# Classe para Estilos Personalizados
class Estilos:
    def __init__(self):
        self.estilo = ttk.Style()
        self.estilo.configure("TButton", padding=5, width=20)
        self.estilo.configure("TLabel", padding=5)
        self.estilo.configure("TEntry", padding=5)

# Classe da Aplicação
class AplicacaoGerenciamentoFuncionarios:
